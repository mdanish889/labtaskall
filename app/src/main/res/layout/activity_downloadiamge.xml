<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".downloadiamge">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/imageNameET"
        android:maxLength="20"
        android:maxLines="1"
        android:hint="Enter the image name to download"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/ic_upload"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/downladedImageIV"
        android:layout_below="@id/imageNameET"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/downloadImageBtn"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:text="Download Image"
        android:layout_below="@id/downladedImageIV"
        android:layout_marginTop="5dp"/>


</RelativeLayout>